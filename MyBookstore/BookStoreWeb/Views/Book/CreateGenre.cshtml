@model BookStoreWeb.DataContext.Genre

@{
    ViewData["Title"] = "CreateGenre";
}

<h4>Создать жанр:</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Новый жанр:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            
            <p>
                <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                </div>
            </p>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Create">Меню добавление книги</a>
</div>
<hr />
<div>
    <a asp-action="index">Меню список книг</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
