<h4>ДОБАВИТЬ КНИГУ</h4>
<form method="post">
    <p>
        <label>Фото обложки:</label><br />
        <input type="text" name="img"/>
    </p>
    <p>
        <label>Название:</label><br />
        <input type="text" name="title"/>
    </p>
    <p>
        <label>Аннотация:</label><br />
        <textarea name="annotation"></textarea>
    </p>

    <p>
        <h5>АВТОР:</h5>
    </p>
    <p>
        <label>Фамилия:</label><br />
        <input type="text" name="Surname"/>
    </p>
    <p>
        <label>Имя:</label><br />
        <input type="text" name="Firstname"/>
    </p>
    <p>
        <label>Отчество:</label><br />
        <input type="text" name="Secondname"/>
    </p>
    <p>
        <label>Биография:</label><br />
        <input type="text" name="Biography"/>
    </p>
    <p>
        <label>Чтец:</label><br />
        <input type="checkbox" name="IsReader" value="false"/>
    </p>
    <p>
        <h5>НА СКЛАД:</h5>
    </p>
     <p>
        <label>Количество:</label><br />
        <input type="text" name="CountBook"/>
    </p>
    <p>
        <label>Цена:</label><br />
        <input type="number" name="Price"/>
    </p>
    <p>
        <input type="submit" value="Добавить в список"/>
    </p>
</form>
